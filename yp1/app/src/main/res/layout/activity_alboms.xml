<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbomsActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="407dp"
        android:layout_height="559dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/n1" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Камнем по голове» — первый номерной студийный альбом российской панк-группы «Король и Шут». \n Дата выпуска: 2 сентября 1996 г. "
                    android:textColor="#FFCB73" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/n2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Коро́ль и Шут» — второй студийный альбом культовой российской панк рок-группы «Король и Шут». Выпущен 18 декабря 1997 года. В 2000 году был переиздан под своим оригинальным названием «Будь как дома, Путник...» и с незначительно изменённой обложкой"
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n3" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Акустический альбом» — третий студийный альбом российской панк-рок-группы «Король и Шут». Был записан в 1998 году на студии «Мелодия», выпущен ОРТ рекордс в 1998 году. Есть второй тираж дисков от ОРТ выпуска 1999 года. Третье издание выпустили уже под Nox Music в 2000 году"
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n5" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Как в старой сказке» — пятый студийный альбом российской панк-рок-группы «Король и Шут». Выпущен 12 ноября 2001 года. Одной из особенностей альбома является использование не характерных для панка хард-роковых мотивов и риффов и камерное звучание. Первый альбом записанный по контракту с компанией «Мистерия звука»"
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n15" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Бунт на корабле» — седьмой студийный альбом российской панк-рок-группы «Король и Шут». Выпущен 13 ноября 2004 года. Отличается от предыдущих альбомов более тяжёлым звучанием и является первым релизом группы, записанным после ухода скрипачки Марии Нефёдовой. Альбом также характерен тем, что записан на студии вживую."
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n6" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Жаль, нет ружья» — шестой студийный альбом российской панк-рок-группы «Король и Шут». Выпущен 10 октября 2002 года. Последний альбом группы, записанный в «золотом» составе и при участии скрипачки Марии Нефёдовой. Второй альбом записанный по контракту с компанией «Мистерия звука». "
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n10" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Продаве́ц кошма́ров» — восьмой студийный альбом российской панк-рок-группы «Король и Шут». Выпущен 5 декабря 2006 года на CD и MC. Песни «Марионетки» и «Ром» возглавляли хит-парад Чартова Дюжина. На песни «Ром» и «Джокер» были сняты постановочные видеоклипы, а на &quot;Марионетки&quot; - концертный"
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n11" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Теа́тръ де́мона» — десятый студийный альбом российской рок-группы «Король и Шут», записанный в непривычном для коллектива стиле арт-панк и выпущенный 11 октября 2010 года лейблом «Никитин». Запись происходила на студиях «Станция звука» и «Мелодия»"
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n12" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Тень кло́уна» — девятый студийный альбом российской рок-группы «Король и Шут». Выпущен 15 ноября 2008 года на CD и MC. Последний альбом, который был выпущен на кассетах. Первый альбом с участием Павла Сажинова как клавишника"
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n4" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Геро́и и Злоде́и» — четвёртый студийный альбом российской панк-рок-группы «Король и Шут». Записан в конце 1999 — начале 2000 года на студии «Добролёт» в Санкт-Петербурге. Выпущен 13 апреля 2000 года."
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n17" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«TODD. Акт 1. Праздник крови» — одиннадцатый студийный альбом российской рок-группы «Король и Шут», составленный из музыки зонг-оперы ужасов «Суини Тодд». Выпущен 8 декабря 2011 года. «Праздник крови» — это первая часть альбома с песнями из зонг-оперы «TODD», составленная из более агрессивных номеров."
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n8" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«TODD. Акт 2. На краю» — двенадцатый и последний студийный альбом российской панк-рок-группы «Король и Шут». Является последним релизом группы, вышедшим при жизни её лидера и вокалиста Михаила Горшенёва. Выпущен 24 мая 2012 года."
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n7" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Ели мясо мужики» — первый концертный альбом российской панк-рок-группы «Король и Шут». Записан 16 июня 1999 года в клубе «Спартак» в Санкт-Петербурге. Выпущен 1 декабря того же года на CD, MC, VHS и DVD. Содействие записи оказывали Игорь «Панкер» Гудков и Алексей «Бесстрашный» Деги"
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n16" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«И́стинный уби́йца» — первый электрический магнитоальбом российской панк-рок-группы «Король и Шут». Записан на студии Михаила Кольчугина в институте на Политехе на малое количество каналов. Большинство композиций с этой демозаписи попало в альбом «Король и Шут»"
                    android:textColor="#FFCB73" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n13" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="348dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="«Страшные сказки» — сборник российской панк-рок-группы «Король и Шут». Выпущен в 2007 году. К работе над записью был приглашён театральный режиссёр, педагог Театрального института им. Щукина Андрей Левицкий."
                    android:textColor="#FFCB73" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button5"
        android:layout_width="416dp"
        android:layout_height="63dp"
        android:text="назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="413dp"
        android:layout_height="40dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="138dp"
        android:gravity="center"
        android:text="Альбомы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>